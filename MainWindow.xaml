<Window x:Class="SkillProfiAdmin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SkillProfi Admin" Height="600" Width="800"
        Background="#F3F4F6" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- Общий стиль для кнопок -->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#388E3C"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="FontWeight" Value="Bold"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#A5D6A7"/>
                    <Setter Property="Foreground" Value="#FFFFFF"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Общий стиль для DataGrid -->
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="RowBackground" Value="#FFFFFF"/>
            <Setter Property="AlternatingRowBackground" Value="#F5F5F5"/>
            <Setter Property="GridLinesVisibility" Value="All"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#D5D5D5"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="IsReadOnly" Value="False"/>
            <!-- По умолчанию редактирование разрешено -->
        </Style>

        <!-- Общий стиль для TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Общий стиль для ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#BDBDBD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
        </Style>

        <!-- Стиль для TextBlock -->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <TabControl SelectionChanged="TabControl_SelectionChanged" Margin="10" Background="#FFFFFF">
            <!-- Вкладка для управления заявками -->
            <TabItem Header="Заявки">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Фильтр -->
                        <RowDefinition Height="*" />
                        <!-- Таблица заявок -->
                        <RowDefinition Height="Auto"/>
                        <!-- Панель управления -->
                    </Grid.RowDefinitions>

                    <!-- Фильтр по статусу и поиску -->
                    <StackPanel Orientation="Horizontal" Margin="10" Grid.Row="0" VerticalAlignment="Center">
                        <TextBlock Text="Поиск:" VerticalAlignment="Center"/>
                        <TextBox x:Name="SearchTextBox" Width="200" TextChanged="SearchTextBox_TextChanged" />
                        <TextBlock Text="Фильтр по статусу:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="FilterStatusComboBox" Width="150" SelectionChanged="FilterStatusComboBox_SelectionChanged">
                            <ComboBoxItem Content="Все" />
                            <ComboBoxItem Content="Received" />
                            <ComboBoxItem Content="InProgress" />
                            <ComboBoxItem Content="Completed" />
                            <ComboBoxItem Content="Rejected" />
                            <ComboBoxItem Content="Cancelled" />
                        </ComboBox>
                    </StackPanel>

                    <!-- Таблица для отображения заявок -->
                    <DataGrid x:Name="RequestsDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="False"
                              SelectionChanged="RequestsDataGrid_SelectionChanged" IsReadOnly="True"
                              MouseDoubleClick="RequestsDataGrid_MouseDoubleClick">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                            <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="*"/>
                            <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Сообщение" Binding="{Binding Message}" Width="*"/>
                            <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Панель управления заявкой -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Grid.Row="2" VerticalAlignment="Center">
                        <TextBlock Text="Изменить статус:" VerticalAlignment="Center"/>
                        <ComboBox x:Name="StatusComboBox" Width="150" Margin="5">
                            <ComboBoxItem Content="Received" />
                            <ComboBoxItem Content="InProgress" />
                            <ComboBoxItem Content="Completed" />
                            <ComboBoxItem Content="Rejected" />
                            <ComboBoxItem Content="Cancelled" />
                        </ComboBox>
                        <Button x:Name="UpdateStatusButton" Content="Сохранить изменения" Click="UpdateStatusButton_Click"/>
                        <Button x:Name="RefreshButton" Content="Обновить" Click="RefreshButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка для управления услугами -->
            <TabItem Header="Услуги">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Управление услугами" FontSize="20" FontWeight="Bold" Margin="10" Grid.Row="0"/>

                    <DataGrid x:Name="ServicesDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="True"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Grid.Row="2">
                        <Button x:Name="AddServiceButton" Content="Добавить Услугу" Click="AddServiceButton_Click"/>
                        <Button x:Name="EditServiceButton" Content="Редактировать Услугу" Click="EditServiceButton_Click"/>
                        <Button x:Name="DeleteServiceButton" Content="Удалить Услугу" Click="DeleteServiceButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка для управления проектами -->
            <TabItem Header="Проекты">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Управление проектами" FontSize="20" FontWeight="Bold" Margin="10" Grid.Row="0"/>

                    <DataGrid x:Name="ProjectsDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="True" 
                              IsReadOnly="True" MouseDoubleClick="ProjectsDataGrid_MouseDoubleClick"/>

                    <!-- Установлено IsReadOnly="True" для предотвращения редактирования -->

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Grid.Row="2">
                        <Button x:Name="AddProjectButton" Content="Добавить Проект" Click="AddProjectButton_Click"/>
                        <Button x:Name="EditProjectButton" Content="Редактировать Проект" Click="EditProjectButton_Click"/>
                        <Button x:Name="DeleteProjectButton" Content="Удалить Проект" Click="DeleteProjectButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка для управления блогом -->
            <TabItem Header="Блог">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Управление блогом" FontSize="20" FontWeight="Bold" Margin="10" Grid.Row="0"/>

                    <DataGrid x:Name="BlogPostsDataGrid" Grid.Row="1" Margin="10" AutoGenerateColumns="True"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10" Grid.Row="2">
                        <Button x:Name="AddBlogPostButton" Content="Добавить Статью" Click="AddBlogPostButton_Click"/>
                        <Button x:Name="EditBlogPostButton" Content="Редактировать Статью" Click="EditBlogPostButton_Click"/>
                        <Button x:Name="DeleteBlogPostButton" Content="Удалить Статью" Click="DeleteBlogPostButton_Click"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Индикатор загрузки, расположенный поверх всего содержимого -->
        <Grid>
            <Border Background="#80FFFFFF" CornerRadius="5" Padding="10" Visibility="Collapsed">
                <TextBlock x:Name="LoadingText" Text="Загрузка..." 
                           Foreground="#FF5722" 
                           FontWeight="Bold" 
                           FontSize="16"
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </Grid>
</Window>
